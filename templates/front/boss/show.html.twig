{% extends 'base.html.twig' %}

{% block title %}Boss détails{% endblock %}
{% block bossActive %}active{% endblock %}
{% block body %}

<div class="container my-5">
    <h1>Boss->getname()</h1>
</div>

<div class="container">

    <div class="card mb-3 mx-auto" style="">
        <div class="row g-0">
            <div class="col-lg-4 my-auto">
                <img src="https://picsum.photos/500/1000" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-lg-8 d-flex flex-column">
                <div class="card-body pb-0">
                    <h5 class="card-title text-decoration-underline">Informations</h5>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item">Localisation =>  Fontaine</li>
                        <li class="list-group-item">Dernière team =>
                            {% for i in 1..4 %}
                                <img src="https://picsum.photos/id/2{{ i }}/50" class="mx-2">
                            {% endfor %}
                        </li>
                    </ul>
                    {% for i in 1..3 %}
                    <h5 class="card-title mt-4 text-decoration-underline">Materiel n°{{ i }}</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Utile pour : </br>
                            {% for i in 1..8 %}
                                <img src="https://picsum.photos/id/2{{ i }}/50">
                            {% endfor %}
                        </li>                    
                    </ul>
                    {% endfor %}
                </div>
                <div class="align-self-end pe-4 pb-2">
                    <a href="{{path ('app_front_boss') }}" class="btn btn-warning">Retour</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
